# Telegram Bot Token
TOKEN=your_telegram_bot_token_here

# Database Settings (optional, по умолчанию используется SQLite)
USE_POSTGRES=false
# Или используйте DATABASE_URL напрямую:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# PostgreSQL Settings (если USE_POSTGRES=true)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ayana_db

# Redis Settings (optional, по умолчанию localhost)
REDIS_URL=redis://localhost:6379/0
USE_REDIS=true

# Environment
ENVIRONMENT=development
POSTGRES_SSL_VERIFY=true

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000

